#include <iostream>
#include <cstdlib>
#include <algorithm>

using namespace std;

int main(void) {
	const int lenght = 12;
	int m[lenght];

	for (int  i = 0; i < lenght; i++)
	{
		m[i] = int(rand() % 70);
	}

	cout << "Arr before :\n";

	for (int i = 0; i < 12; i++)
	{
		cout << m[i] << " ";
	}

	sort(m, m + lenght);

	cout << "\nArr after  :\n";

	for (int i = 0; i < 12; i++)
	{
		cout << m[i] << " ";
	}

	return 0;
}

