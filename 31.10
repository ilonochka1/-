#include <iostream>
#include <cstdlib>
#include <algorithm>

using namespace std;

int main(void) {
	const int lenght = 12;
	int m[lenght];

	for (int  i = 0; i < lenght; i++)
	{
		m[i] = int(rand() % 100) + -(rand() % 100);
	}

	cout << "Arr random :\n";

	for (int i = 0; i < lenght; i++)
	{
		cout << m[i] << " ";
	}

	for (int i = 0; i < lenght; i++)
	{
		if (m[i] < 0) 
		{
			m[i] = 0;
		}
	}

	cout << "\nArr after change : \n";

	for (int i = 0; i < lenght; i++)
	{
		cout << m[i] << " ";
	}

	return 0;
}

